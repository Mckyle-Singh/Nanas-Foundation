@{
    ViewData["Title"] = "Home Page";
}
@if (TempData["LoginMessage"] != null)
{
    <div class="alert alert-warning" role="alert">
        @TempData["LoginMessage"]
    </div>
}


<!-- Hero Section -->
<section class="hero-section">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-6">
                <div class="hero-content">
                    <h1 class="hero-title">
                        Increasing Awareness,<br>
                        Reducing Stigma,<br>
                        Supporting Youth
                    </h1>
                    <p class="hero-quote">
                        The Board of Nana Foundation Organisation is composed of dedicated and experienced
                        individuals who provide strategic direction, oversight, and guidance to the organisation
                    </p>
                    <div class="hero-buttons">
                        <a asp-area="Identity" asp-page="/Account/Register" class="btn btn-light">Join Us</a>
                        <a asp-controller="Home" asp-action="NewsEvents" class="btn btn-outline-light">Read Series</a>
                    </div>
                </div>
            </div>
            <div class="col-lg-6">
                <!-- Placeholder for the woman image - you can add an actual image here -->
                <div class="d-flex justify-content-center">
                    <div class="hero-image-placeholder">
                        <div class="text-center">
                            <img src="~/images/Nana Foundation 006.png" alt="Nana Foundation Profile" style="max-height: 500px; margin-top: 10px;" />
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Mission and Events Section -->
<section class="py-5">
    <div class="container">
        <div class="row">
            <!-- Our Mission -->
            <div class="col-lg-6">
                <div class="mission-section">
                    <h2 class="mission-title">Our Mission</h2>
                    <p class="mission-text">
                        To educate and support young people across South Africa
                        through HIV awareness, life skills, mental wellness, career
                        guidance, and empowerment programs, creating hope and
                        direction for those facing hardship.
                    </p>
                </div>
            </div>
            
            <!-- Upcoming Events -->
            <div class="col-lg-6">
                <div class="events-section">
                    <h2 class="events-title">Upcoming Event</h2>
                    <div class="event-card">
                        <div class="d-flex align-items-start">
                            <div class="me-3">
                                <i class="bi bi-calendar3" style="font-size: 2rem; color: #DA5B34;"></i>
                            </div>
                            <div>
                                <div class="event-date">@Model.Date.ToString("dd MMM yyyy")</div>
                                <h4 class="event-title">@Model.Title</h4>
                                <a asp-controller="Home" asp-action="NewsEvents" class="event-link">View Details</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
