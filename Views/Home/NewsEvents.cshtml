@model Tuple<List<Nanas_Foundation.Models.Event>, List<Nanas_Foundation.Models.BlogPost>>
@{
    ViewData["Title"] = "News & Events";
}

<!-- Hero Section -->
<section class="hero-section">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-8 mx-auto text-center">
                <div class="hero-content">
                    <h1 class="hero-title">News & Events</h1>
                    <p class="hero-quote">
                        "Stay informed and inspired—explore the latest stories, milestones, and community events shaping our journey together."
                    </p>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Upcoming Events Section -->
<section class="py-5">
    <div class="container">
        <div class="text-center mb-5">
            <h2 class="events-title">Upcoming Events</h2>
            <p class="lead text-muted">Find fun and engaging activities to participate in</p>
        </div>
        <div class="row">
            @foreach (var e in Model.Item1)
            {
                <div class="col-lg-6 mb-4">
                    <div class="event-card">
                        <div class="d-flex align-items-start">
                            <div class="me-3">
                                <i class="bi bi-calendar-event" style="font-size: 2rem; color: #DA5B34;"></i>
                            </div>
                            <div>
                                <h4 class="event-title">@e.Title</h4>
                                <p class="text-muted">@e.Date.ToString("MMM d, yyyy") – @e.Location</p>
                                <a class="event-link disabled" tabindex="-1" aria-disabled="true" style="pointer-events: none; opacity: 0.6;">Learn More</a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</section>

<!-- Blogs Section -->
<section class="py-5">
    <div class="container">
        <div class="text-center mb-5">
            <h2 class="events-title">Our Blog</h2>
            <p class="lead text-muted">Explore stories, insights, and resources that support mental wellness and community growth</p>
        </div>
        <div class="row">
            @foreach (var blog in Model.Item2)
            {
                <div class="col-lg-6 mb-4">
                    <div class="event-card">
                        <div class="d-flex align-items-start">
                            <div class="me-3">
                                @if (!string.IsNullOrEmpty(blog.ProfilePhotoPath))
                                {
                                    <img src="@blog.ProfilePhotoPath" alt="Author Photo" class="rounded-circle" style="height: 48px; width: 48px; object-fit: cover;" />
                                }
                                else
                                {
                                    <i class="bi bi-person-circle" style="font-size: 2rem; color: #DA5B34;"></i>
                                }
                            </div>
                            <div>
                                <h4 class="event-title">@blog.Title</h4>
                                <p class="text-muted">@blog.CreatedAt.ToString("MMM d, yyyy")</p>
                                <p class="mb-1"><strong>By:</strong> @blog.AuthorName</p>
                                <a href="@blog.WebsiteLink" target="_blank" class="event-link">Read Full Article</a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</section>