@{
    ViewData["Title"] = "News & Events";
}

<!-- Hero Section -->
<section class="hero-section">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-8 mx-auto text-center">
                <div class="hero-content">
                    <h1 class="hero-title">News & Events</h1>
                    <p class="hero-quote">
                        "Stay informed and inspired—explore the latest stories, milestones, and community events shaping our journey together."
                    </p>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Upcoming Events Section -->
<section class="py-5">
    <div class="container">
        <div class="text-center mb-5">
            <h2 class="events-title">Upcoming Events</h2>
            <p class="lead text-muted">Find fun and engaging activities to participate in</p>
        </div>
        <div class="row">
            <!-- Event 1 -->
            <div class="col-lg-6 mb-4">
                <div class="event-card">
                    <div class="d-flex align-items-start">
                        <div class="me-3">
                            <i class="bi bi-calendar-event" style="font-size: 2rem; color: #DA5B34;"></i>
                        </div>
                        <div>
                            <h4 class="event-title">Community Workshop</h4>
                            <p class="text-muted">Sept 25, 2023 – Local Community Center</p>
                            <a href="#" class="event-link">Sign Up for Workshop</a>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Event 2 -->
            <div class="col-lg-6 mb-4">
                <div class="event-card">
                    <div class="d-flex align-items-start">
                        <div class="me-3">
                            <i class="bi bi-heart-pulse" style="font-size: 2rem; color: #DA5B34;"></i>
                        </div>
                        <div>
                            <h4 class="event-title">Charity Run</h4>
                            <p class="text-muted">Oct 5, 2023 – Downtown Park</p>
                            <a href="#" class="event-link">Register for Run</a>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Event 3 -->
            <div class="col-lg-6 mb-4">
                <div class="event-card">
                    <div class="d-flex align-items-start">
                        <div class="me-3">
                            <i class="bi bi-people-fill" style="font-size: 2rem; color: #DA5B34;"></i>
                        </div>
                        <div>
                            <h4 class="event-title">Support Group Meeting</h4>
                            <p class="text-muted">Nov 7, 2023 – Nana’s Foundation Offices</p>
                            <a href="#" class="event-link">Join Support Group</a>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Event 4 -->
            <div class="col-lg-6 mb-4">
                <div class="event-card">
                    <div class="d-flex align-items-start">
                        <div class="me-3">
                            <i class="bi bi-journal-text" style="font-size: 2rem; color: #DA5B34;"></i>
                        </div>
                        <div>
                            <h4 class="event-title">Mental Health Seminar</h4>
                            <p class="text-muted">Dec 10, 2023 – Online Event</p>
                            <a href="#" class="event-link">Register for Seminar</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>