@model List<Nanas_Foundation.Models.Event>
@{
    ViewData["Title"] = "News & Events";
}

<!-- Hero Section -->
<section class="hero-section">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-8 mx-auto text-center">
                <div class="hero-content">
                    <h1 class="hero-title">News & Events</h1>
                    <p class="hero-quote">
                        "Stay informed and inspired—explore the latest stories, milestones, and community events shaping our journey together."
                    </p>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Upcoming Events Section -->
<section class="py-5">
    <div class="container">
        <div class="text-center mb-5">
            <h2 class="events-title">Upcoming Events</h2>
            <p class="lead text-muted">Find fun and engaging activities to participate in</p>
        </div>
        <div class="row">
            @foreach (var e in Model)
            {
                <div class="col-lg-6 mb-4">
                    <div class="event-card">
                        <div class="d-flex align-items-start">
                            <div class="me-3">
                                <i class="bi bi-calendar-event" style="font-size: 2rem; color: #DA5B34;"></i>
                            </div>
                            <div>
                                <h4 class="event-title">@e.Title</h4>
                                <p class="text-muted">@e.Date.ToString("MMM d, yyyy") – @e.Location</p>
                                <a class="event-link disabled" tabindex="-1" aria-disabled="true" style="pointer-events: none; opacity: 0.6;">Learn More</a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</section>

<!-- Blogs Section -->
<section class="py-5">
    <div class="container">
        <div class="text-center mb-5">
            <h2 class="events-title">Our Blog</h2>
            <p class="lead text-muted">Explore stories, insights, and resources that support mental wellness and community growth</p>
        </div>
        <div class="row">
            <!-- Blog 1 -->
            <div class="col-lg-6 mb-4">
                <div class="event-card">
                    <div class="d-flex align-items-start">
                        <div class="me-3">
                            <i class="bi bi-journal-richtext" style="font-size: 2rem; color: #DA5B34;"></i>
                        </div>
                        <div>
                            <h4 class="event-title">Understanding Mental Health Stigma</h4>
                            <p class="text-muted">Feb 1, 2023</p>
                            <a href="https://example.com/blog-post-1" target="_blank" class="event-link">Read Full Article</a>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Blog 2 -->
            <div class="col-lg-6 mb-4">
                <div class="event-card">
                    <div class="d-flex align-items-start">
                        <div class="me-3">
                            <i class="bi bi-people" style="font-size: 2rem; color: #DA5B34;"></i>
                        </div>
                        <div>
                            <h4 class="event-title">The Importance of Mental Health Education</h4>
                            <p class="text-muted">Jan 1, 2023</p>
                            <a href="https://example.com/blog-post-2" target="_blank" class="event-link">Read Full Article</a>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Blog 3 -->
            <div class="col-lg-6 mb-4">
                <div class="event-card">
                    <div class="d-flex align-items-start">
                        <div class="me-3">
                            <i class="bi bi-calendar-check" style="font-size: 2rem; color: #DA5B34;"></i>
                        </div>
                        <div>
                            <h4 class="event-title">Tips for Effective Stress Management</h4>
                            <p class="text-muted">Dec 1, 2022</p>
                            <a href="https://example.com/blog-post-3" target="_blank" class="event-link">Read Full Article</a>
                        </div>
                    </div>
                </div>
            </div>
            <!-- Blog 4 -->
            <div class="col-lg-6 mb-4">
                <div class="event-card">
                    <div class="d-flex align-items-start">
                        <div class="me-3">
                            <i class="bi bi-pencil-square" style="font-size: 2rem; color: #DA5B34;"></i>
                        </div>
                        <div>
                            <h4 class="event-title">How Journaling Can Improve Your Mental Health</h4>
