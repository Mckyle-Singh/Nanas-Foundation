@{
    ViewData["Title"] = "Privacy Policy";
}
<!-- Hero Section -->
<section class="hero-section">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-8 mx-auto text-center">
                <div class="hero-content">
                    <h1 class="hero-title">Privacy Policy</h1>
                    <p class="hero-quote">
                        "Your trust matters. Learn how we protect your personal information and uphold transparency, especially for the youth and families we serve."
                    </p>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Policy Overview Section -->
<section class="py-5">
    <div class="container">
        <div class="text-center mb-5">
            <h2 class="events-title">Our Commitment</h2>
            <p class="lead text-muted">We follow South Africa’s POPIA guidelines to ensure your data is safe, respected, and never misused.</p>
        </div>
        <div class="row">
            <div class="col-lg-6 mb-4">
                <div class="event-card">
                    <div class="d-flex align-items-start">
                        <div class="me-3">
                            <i class="bi bi-search" style="font-size: 2rem; color: #DA5B34;"></i>
                        </div>
                        <div>
                            <h4 class="event-title">What We Collect</h4>
                            <ul class="text-muted">
                                <li>Contact details (name, email)</li>
                                <li>Demographic info (if voluntarily provided)</li>
                                <li>Usage data (IP, pages visited)</li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-lg-6 mb-4">
                <div class="event-card">
                    <div class="d-flex align-items-start">
                        <div class="me-3">
                            <i class="bi bi-bullseye" style="font-size: 2rem; color: #DA5B34;"></i>
                        </div>
                        <div>
                            <h4 class="event-title">Why We Collect It</h4>
                            <ul class="text-muted">
                                <li>Respond to inquiries</li>
                                <li>Share updates and events</li>
                                <li>Improve site experience</li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-lg-6 mb-4">
                <div class="event-card">
                    <div class="d-flex align-items-start">
                        <div class="me-3">
                            <i class="bi bi-shield-lock" style="font-size: 2rem; color: #DA5B34;"></i>
                        </div>
                        <div>
                            <h4 class="event-title">How We Protect It</h4>
                            <ul class="text-muted">
                                <li>Secure servers & encryption</li>
                                <li>Limited access to sensitive data</li>
                                <li>Regular audits & updates</li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-lg-6 mb-4">
                <div class="event-card">
                    <div class="d-flex align-items-start">
                        <div class="me-3">
                            <i class="bi bi-person-check" style="font-size: 2rem; color: #DA5B34;"></i>
                        </div>
                        <div>
                            <h4 class="event-title">Your Rights</h4>
                            <ul class="text-muted">
                                <li>Access or correct your data</li>
                                <li>Request deletion</li>
                                <li>Withdraw consent anytime</li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-lg-12 text-center mt-4">
                <p class="text-muted">For questions or concerns, please visit our <a asp-controller="Home" asp-action="Contactus">Contact Us</a> page. Your trust is at the heart of everything we do.</p>
            </div>
        </div>
    </div>
</section>

