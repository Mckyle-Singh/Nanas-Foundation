@{
    ViewData["Title"] = "Resources";
}

<!-- Hero Section -->
<section class="hero-section">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-8 mx-auto text-center">
                <div class="hero-content">
                    <h1 class="hero-title">Mental Health Resources</h1>
                    <p class="hero-quote">
                        "Find the support, information, and tools you need for your mental health journey."
                    </p>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Crisis Resources -->
<section class="py-5 bg-light">
    <div class="container">
        <div class="text-center mb-5">
            <h2 class="events-title text-danger">Crisis Support - Get Help Now</h2>
            <p class="lead">If you or someone you know is in crisis, help is available 24/7</p>
        </div>
        <div class="row justify-content-center">
            <div class="col-lg-8">
                <div class="event-card text-center" style="border-left-color: #dc3545;">
                    <h4 class="event-title text-danger">Emergency Hotlines</h4>
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <h5>National Suicide Prevention Lifeline</h5>
                            <p class="lead"><strong>988</strong></p>
                            <p>24/7 crisis support</p>
                        </div>
                        <div class="col-md-6 mb-3">
                            <h5>Crisis Text Line</h5>
                            <p class="lead"><strong>Text HOME to 741741</strong></p>
                            <p>24/7 text support</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Resource Categories -->
<section class="py-5">
    <div class="container">
        <div class="text-center mb-5">
            <h2 class="events-title">Resource Categories</h2>
            <p class="lead text-muted">Find the right resources for your needs</p>
        </div>
        <div class="row">
            <div class="col-lg-4 mb-4">
                <div class="event-card h-100">
                    <div class="text-center mb-3">
                        <i class="bi bi-book" style="font-size: 3rem; color: #DA5B34;"></i>
                    </div>
                    <h4 class="event-title">Educational Materials</h4>
                    <ul class="list-unstyled">
                        <li><a href="#" class="event-link">Understanding Depression</a></li>
                        <li><a href="#" class="event-link">Anxiety Management Guide</a></li>
                        <li><a href="#" class="event-link">Stress Reduction Techniques</a></li>
                        <li><a href="#" class="event-link">Mindfulness Practices</a></li>
                        <li><a href="#" class="event-link">Sleep Hygiene Tips</a></li>
                    </ul>
                </div>
            </div>
            <div class="col-lg-4 mb-4">
                <div class="event-card h-100">
                    <div class="text-center mb-3">
                        <i class="bi bi-people" style="font-size: 3rem; color: #DA5B34;"></i>
                    </div>
                    <h4 class="event-title">Support Groups</h4>
                    <ul class="list-unstyled">
                        <li><a href="#" class="event-link">Youth Support Circle</a></li>
                        <li><a href="#" class="event-link">Family Support Network</a></li>
                        <li><a href="#" class="event-link">Peer Counseling Groups</a></li>
                        <li><a href="#" class="event-link">Online Support Communities</a></li>
                        <li><a href="#" class="event-link">Weekly Check-in Sessions</a></li>
                    </ul>
                </div>
            </div>
            <div class="col-lg-4 mb-4">
                <div class="event-card h-100">
                    <div class="text-center mb-3">
                        <i class="bi bi-heart-pulse" style="font-size: 3rem; color: #DA5B34;"></i>
                    </div>
                    <h4 class="event-title">Professional Services</h4>
                    <ul class="list-unstyled">
                        <li><a href="#" class="event-link">Counseling Services</a></li>
