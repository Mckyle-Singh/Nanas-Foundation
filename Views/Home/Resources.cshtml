@{
    ViewData["Title"] = "Resources";
}

<!-- Hero Section -->
<section class="hero-section">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-8 mx-auto text-center">
                <div class="hero-content">
                    <h1 class="hero-title">Mental Health Resources</h1>
                    <p class="hero-quote">
                        "Find the support, information, and tools you need for your mental health journey."
                    </p>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Crisis Resources -->
<section class="py-5 bg-light">
    <div class="container">
        <div class="text-center mb-5">
            <h2 class="events-title text-danger">Crisis Support - Get Help Now</h2>
            <p class="lead">If you or someone you know is affected by HIV/AIDS or in crisis, help is available 24/7</p>
        </div>
        <div class="row justify-content-center">
            <div class="col-lg-8">
                <div class="event-card text-center" style="border-left-color: #dc3545;">
                    <h4 class="event-title text-danger">Emergency Hotlines</h4>
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <h5>LifeLine South Africa – HIV/AIDS Helpline</h5>
                            <p class="lead"><strong>0800 012 322</strong></p>
                            <p>Free, confidential HIV/AIDS support and counseling</p>
                        </div>
                        <div class="col-md-6 mb-3">
                            <h5>Netcare Akeso Crisis Line</h5>
                            <p class="lead"><strong>0861 435 787</strong></p>
                            <p>24/7 mental health and crisis support</p>
                        </div>
                        <div class="col-md-6 mb-3">
                            <h5>SADAG Mental Health & HIV Support</h5>
                            <p class="lead"><strong>0800 567 567</strong></p>
                            <p>24/7 support for depression, anxiety, and HIV-related stress</p>
                        </div>
                        <div class="col-md-6 mb-3">
                            <h5>Childline South Africa</h5>
                            <p class="lead"><strong>0800 055 555</strong></p>
                            <p>Support for youth affected by HIV/AIDS and abuse</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Resource Categories -->
<section class="py-5">
    <div class="container">
        <div class="text-center mb-5">
            <h2 class="events-title">Resource Categories</h2>
            <p class="lead text-muted">Find the right resources for your needs</p>
        </div>
        <div class="row">
            <!-- Educational Materials -->
            <div class="col-lg-4 mb-4">
                <div class="event-card h-100">
                    <div class="text-center mb-3">
                        <i class="bi bi-book" style="font-size: 3rem; color: #DA5B34;"></i>
                    </div>
                    <h4 class="event-title">Educational Materials</h4>
                    <ul class="list-unstyled">
                        <li><a href="https://www.therapyroute.com/article/free-mental-health-resources-in-south-africa-by-therapyroute" target="_blank" class="event-link">Understanding Depression</a></li>
                        <li><a href="https://www.mediclinic.co.za/en/infohub-corporate/healthy-life/mental-health/how-to-cope-with-an-anxiety-disorder.html" target="_blank" class="event-link">Anxiety Management Guide</a></li>
                        <li><a href="https://www.eapasa.co.za/back-to-the-basics-of-stress-management/" target="_blank" class="event-link">Stress Reduction Techniques</a></li>
                        <li><a href="https://mindfulness.org.za/" target="_blank" class="event-link">Mindfulness Practices</a></li>
                        <li><a href="https://www.affinityhealth.co.za/improve-your-sleep-hygiene-for-better-health/" target="_blank" class="event-link">Sleep Hygiene Tips</a></li>
                    </ul>
                </div>
            </div>

            <!-- Support Groups -->
            <div class="col-lg-4 mb-4">
                <div class="event-card h-100">
                    <div class="text-center mb-3">
                        <i class="bi bi-people" style="font-size: 3rem; color: #DA5B34;"></i>
                    </div>
                    <h4 class="event-title">Support Groups</h4>
                    <ul class="list-unstyled">
                        <li><a href="https://www.sadag.org/index.php?option=com_content&view=article&id=3216:support-groups-young-adults&catid=96:support-groups&Itemid=193" target="_blank" class="event-link">Youth Support Circle</a></li>
                        <li><a href="https://www.sadag.org/index.php?option=com_content&view=article&id=3220:support-groups-family-members&catid=96:support-groups&Itemid=193" target="_blank" class="event-link">Family Support Network</a></li>
                        <li><a href="https://www.sadag.org/index.php?option=com_content&view=article&id=3217:support-groups-peer-support-groups&catid=96:support-groups&Itemid=193" target="_blank" class="event-link">Peer Counseling Groups</a></li>
                    </ul>
                </div>
            </div>

            <!-- Professional Services -->
            <div class="col-lg-4 mb-4">
                <div class="event-card h-100">
                    <div class="text-center mb-3">
                        <i class="bi bi-heart-pulse" style="font-size: 3rem; color: #DA5B34;"></i>
                    </div>
                    <h4 class="event-title">Professional Services</h4>
                    <ul class="list-unstyled">
                        <li><a href="https://counsellingmatterssa.co.za/free-online-counselling/" target="_blank" class="event-link">Counseling Services</a></li>
                        <li><a href="https://www.facebook.com/groups/1634413983456682/" target="_blank" class="event-link">Therapy Referrals</a></li>
                        <li><a href="https://www.psychologytoday.com/za/basics/psychological-evaluation" target="_blank" class="event-link">Psychiatric Evaluations</a></li>
                        <li><a href="https://tears.co.za/" target="_blank" class="event-link">Crisis Intervention</a></li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</section>



