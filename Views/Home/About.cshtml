@{
    ViewData["Title"] = "About Us";
}

<!-- Hero Section -->
<section class="hero-section">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-8 mx-auto text-center">
                <div class="hero-content">
                    <h1 class="hero-title">About Nanas Foundation</h1>
                    <p class="hero-quote">
                        "Empowering communities through compassion, education, and unwavering support for those who need it most."
                    </p>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Our Story Section -->
<section class="py-5 bg-light">
    <div class="container">
        <div class="row">
            <div class="col-lg-6">
                <h2 class="mission-title">Our Story</h2>
                <div class="mission-text">
                    <p>Founded in 2021, Nanas Foundation emerged from a deeply personal mission to address the growing mental health crisis among young people. What started as a small community initiative has grown into a comprehensive support network dedicated to breaking down barriers and creating safe spaces for healing.</p>
                    
                    <p>Our founder, inspired by personal experiences with mental health challenges, recognized the urgent need for accessible, stigma-free support systems. Today, we serve hundreds of individuals and families, providing resources, education, and hope to those who need it most.</p>
                </div>
            </div>
            <div class="col-lg-6">
                <div class="d-flex justify-content-center">
                    <div class="hero-image-placeholder">
                        <div class="text-center">
                            <i class="bi bi-heart-fill" style="font-size: 4rem; margin-bottom: 10px; color: #DA5B34;"></i>
                            <br>
                            <small>Our Foundation</small>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Values Section -->
<section class="py-5">
    <div class="container">
        <div class="text-center mb-5">
            <h2 class="events-title">Our Core Values</h2>
            <p class="lead text-muted">The principles that guide everything we do</p>
        </div>
        <div class="row">
            <div class="col-lg-4 mb-4">
                <div class="event-card text-center h-100">
                    <i class="bi bi-heart" style="font-size: 3rem; color: #DA5B34; margin-bottom: 20px;"></i>
                    <h4 class="event-title">Compassion</h4>
                    <p>We approach every individual with empathy, understanding, and genuine care for their unique journey.</p>
                </div>
            </div>
            <div class="col-lg-4 mb-4">
                <div class="event-card text-center h-100">
                    <i class="bi bi-shield-check" style="font-size: 3rem; color: #DA5B34; margin-bottom: 20px;"></i>
                    <h4 class="event-title">Safety</h4>
                    <p>Creating secure, judgment-free environments where people feel safe to share, heal, and grow.</p>
                </div>
            </div>
            <div class="col-lg-4 mb-4">
                <div class="event-card text-center h-100">
                    <i class="bi bi-people" style="font-size: 3rem; color: #DA5B34; margin-bottom: 20px;"></i>
                    <h4 class="event-title">Community</h4>
                    <p>Building strong support networks that foster connection, understanding, and mutual support.</p>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Impact Section -->
<section class="py-5 bg-light">
    <div class="container">
        <div class="row">
            <div class="col-lg-8 mx-auto text-center">
                <h2 class="mission-title">Our Impact</h2>
                <div class="row mt-5">
                    <div class="col-md-4 mb-4">
                        <div class="text-center">
                            <h3 class="display-4 text-primary fw-bold" style="color: #DA5B34 !important;">500+</h3>
                            <p class="lead">Lives Touched</p>
                        </div>
                    </div>
                    <div class="col-md-4 mb-4">
                        <div class="text-center">
                            <h3 class="display-4 text-primary fw-bold" style="color: #DA5B34 !important;">50+</h3>
                            <p class="lead">Community Events</p>
                        </div>
                    </div>
                    <div class="col-md-4 mb-4">
                        <div class="text-center">
                            <h3 class="display-4 text-primary fw-bold" style="color: #DA5B34 !important;">24/7</h3>
                            <p class="lead">Support Available</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Call to Action -->
<section class="py-5">
    <div class="container">
        <div class="row">
            <div class="col-lg-8 mx-auto text-center">
                <h2 class="mission-title">Join Our Mission</h2>
                <p class="lead mb-4">Together, we can create a world where mental health support is accessible to everyone.</p>
                <div class="hero-buttons">
                    <a asp-controller="Home" asp-action="GetInvolved" class="btn btn-light" style="background: #DA5B34; color: white; border: none;">Get Involved</a>
                    <a asp-controller="Home" asp-action="Contact" class="btn btn-outline-primary" style="border-color: #DA5B34; color: #DA5B34;">Contact Us</a>
                </div>
            </div>
        </div>
    </div>
</section>
