@{
    ViewData["Title"] = "Our Mission";
}

<!-- Hero Section -->
<section class="hero-section">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-8 mx-auto text-center">
                <div class="hero-content">
                    <h1 class="hero-title">Our Mission</h1>
                    <p class="hero-quote">
                        To educate and support young people across South Africa
                        through HIV awareness, life skills, mental wellness, career
                        guidance, and empowerment programs, creating hope and
                        direction for those facing hardship.
                    </p>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Mission Statement -->
<section class="py-5">
    <div class="container">
        <div class="row">
            <div class="col-lg-8 mx-auto">
                <div class="mission-text text-left">
                    <h2 class="mission-title">What We Stand For</h2>
                    <p>
                        We are dedicated to delivering high-quality programs and services
                        that positively impact the lives of young people in South Africa. We
                        commit to:
                    </p>
                    
                    <ul>
                        <li>Providing accurate and relevant information, resources, and support to empower youth.</li>
                        <li>Ensuring our programs are evidence-informed, culturally sensitive, and tailored to meet the needs of our target audience.</li>
                        <li>Fostering a culture of transparency, accountability, and continuous improvement in all aspects of our work.</li>
                        <li>Building strong partnerships with stakeholders, including local communities, organizations, and healthcare providers.</li>
                        <li>Monitoring and evaluating our programs to assess their effectiveness and identify areas for improvement.</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Our Approach -->
<section class="py-5 bg-light">
    <div class="container">
        <div class="text-center mb-5">
            <h2 class="events-title">Our Approach</h2>
            <p class="lead text-muted">How we make a difference in our community</p>
        </div>
        <div class="row">
            <div class="col-lg-4 mb-4">
                <div class="event-card h-100">
                    <div class="d-flex align-items-start">
                        <div class="me-3">
                            <i class="bi bi-lightbulb" style="font-size: 2.5rem; color: #DA5B34;"></i>
                        </div>
                        <div>
                            <h4 class="event-title">Education & Awareness</h4>
                            <p>We provide educational programs, workshops, and resources to increase mental health literacy and reduce stigma in our communities.</p>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-lg-4 mb-4">
                <div class="event-card h-100">
                    <div class="d-flex align-items-start">
                        <div class="me-3">
                            <i class="bi bi-hands-helping" style="font-size: 2.5rem; color: #DA5B34;"></i>
                        </div>
                        <div>
                            <h4 class="event-title">Direct Support</h4>
                            <p>We offer counseling services, support groups, and crisis intervention to individuals and families in need of immediate assistance.</p>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-lg-4 mb-4">
                <div class="event-card h-100">
                    <div class="d-flex align-items-start">
                        <div class="me-3">
                            <i class="bi bi-megaphone" style="font-size: 2.5rem; color: #DA5B34;"></i>
                        </div>
                        <div>
                            <h4 class="event-title">Advocacy</h4>
                            <p>We advocate for policy changes and systemic improvements to make mental health services more accessible and effective.</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Goals Section -->
<section class="py-5">
    <div class="container">
        <div class="row">
            <div class="col-lg-6">
                <h2 class="mission-title">Our Goals</h2>
                <div class="mission-text">
                    <ul class="list-unstyled">
                        <li class="mb-3">
                            <i class="bi bi-check-circle-fill me-3" style="color: #DA5B34;"></i>
                            <strong>Health & Awareness::</strong>  Provide education and awareness about HIV/AIDS, Mental Health, and Youth Challenges..
                        </li>
                        <li class="mb-3">
                            <i class="bi bi-check-circle-fill me-3" style="color: #DA5B34;"></i>
                            <strong>Life Skills & Mentorship:</strong> Offer support, guidance, and motivation through life skills training, mentorship, and counseling.
                        </li>
                        <li class="mb-3">
                            <i class="bi bi-check-circle-fill me-3" style="color: #DA5B34;"></i>
                            <strong>Education & Career Support:</strong> Assist with school, bursary, and job applications, and provide career guidance.
                        </li>
                        <li class="mb-3">
                            <i class="bi bi-check-circle-fill me-3" style="color: #DA5B34;"></i>
                            <strong> Skills Development & Empowerment:</strong>  Facilitate skills training, entrepreneurship, and employability programs, empowering youth and vulnerable individuals, including those with disabilities..
                        </li>
                        <li class="mb-3">
                            <i class="bi bi-check-circle-fill me-3" style="color: #DA5B34;"></i>
                            <strong> Cultural Healing & Social Wellness:</strong>  Promote cultural healing, wellness programs, inclusion, and community social support.
                        </li>
                        <li class="mb-3">
                            <i class="bi bi-check-circle-fill me-3" style="color: #DA5B34;"></i>
                            <strong>  Community Reach & Advocacy:</strong>   Operate nationwide within South Africa, with a special focus on rural, underdeveloped communities, ensuring no one is left behind
                        </li>
                    </ul>
                </div>
            </div>
            <div class="col-lg-6 mt-5">
                <div class="d-flex justify-content-center">
                    <div class="hero-image-placeholder">
                        <div class="text-center" style="margin-top: 80px; margin-left: 200px;">
                            <img src="~/images/Nana Foundation 004.png" alt="Nana Foundation Profile" style="max-height: 600px; margin-top: 60px; margin-bottom: 10px;" />
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-lg-6">
                <div class="d-flex justify-content-center">
                    <div class="hero-image-placeholder">
                        <div class="text-center">
                            <i class="bi bi-target" style="font-size: 4rem; margin-bottom: 10px; color: #DA5B34;"></i>
                            <br>
                            <small>Our Vision</small>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Vision Statement -->
<section class="py-5 bg-light">
    <div class="container">
        <div class="row">
            <div class="col-lg-8 mx-auto text-center">
                <h2 class="mission-title">Our Vision</h2>
                <div class="mission-text">
                    <p class="lead">We envision a future where mental health is treated with the same priority as physical health, where seeking help is seen as a sign of strength, and where every person has access to the support they need to live a fulfilling life.</p>
                    
                    <p>Through our work, we aim to create communities where mental wellness is promoted, protected, and celebrated as an essential component of overall well-being.</p>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Call to Action -->
<section class="py-5">
    <div class="container">
        <div class="row">
            <div class="col-lg-8 mx-auto text-center">
                <h2 class="mission-title">Be Part of the Solution</h2>
                <p class="lead mb-4">Help us create lasting change in mental health support and advocacy.</p>
                <div class="hero-buttons">
                    <a asp-controller="Volunteers" asp-action="VolunteerForEvent" class="btn btn-light" style="background: #DA5B34; color: white; border: none;">Volunteer</a>
                    <a asp-controller="Home" asp-action="About" class="btn btn-outline-primary" style="border-color: #DA5B34; color: #DA5B34;">Learn More</a>
                </div>
            </div>
        </div>
    </div>
</section>
