@{
    ViewData["Title"] = "Our Mission";
}

<!-- Hero Section -->
<section class="hero-section">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-8 mx-auto text-center">
                <div class="hero-content">
                    <h1 class="hero-title">Our Mission</h1>
                    <p class="hero-quote">
                        "To create a world where mental health support is accessible, stigma-free, and empowering for all individuals and communities."
                    </p>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Mission Statement -->
<section class="py-5">
    <div class="container">
        <div class="row">
            <div class="col-lg-8 mx-auto">
                <div class="mission-text text-center">
                    <h2 class="mission-title">What We Stand For</h2>
                    <p class="lead">At Nanas Foundation, we believe that mental health is a fundamental human right. Our mission is to break down barriers, eliminate stigma, and provide comprehensive support to individuals and families affected by mental health challenges.</p>
                    
                    <p>We are committed to creating safe spaces where people can seek help without fear of judgment, access resources regardless of their circumstances, and find the strength to heal and thrive.</p>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Our Approach -->
<section class="py-5 bg-light">
    <div class="container">
        <div class="text-center mb-5">
            <h2 class="events-title">Our Approach</h2>
            <p class="lead text-muted">How we make a difference in our community</p>
        </div>
        <div class="row">
            <div class="col-lg-4 mb-4">
                <div class="event-card h-100">
                    <div class="d-flex align-items-start">
                        <div class="me-3">
                            <i class="bi bi-lightbulb" style="font-size: 2.5rem; color: #DA5B34;"></i>
                        </div>
                        <div>
                            <h4 class="event-title">Education & Awareness</h4>
                            <p>We provide educational programs, workshops, and resources to increase mental health literacy and reduce stigma in our communities.</p>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-lg-4 mb-4">
                <div class="event-card h-100">
                    <div class="d-flex align-items-start">
                        <div class="me-3">
                            <i class="bi bi-hands-helping" style="font-size: 2.5rem; color: #DA5B34;"></i>
                        </div>
                        <div>
                            <h4 class="event-title">Direct Support</h4>
                            <p>We offer counseling services, support groups, and crisis intervention to individuals and families in need of immediate assistance.</p>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-lg-4 mb-4">
                <div class="event-card h-100">
                    <div class="d-flex align-items-start">
                        <div class="me-3">
                            <i class="bi bi-megaphone" style="font-size: 2.5rem; color: #DA5B34;"></i>
                        </div>
                        <div>
                            <h4 class="event-title">Advocacy</h4>
                            <p>We advocate for policy changes and systemic improvements to make mental health services more accessible and effective.</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Goals Section -->
<section class="py-5">
    <div class="container">
        <div class="row">
            <div class="col-lg-6">
                <h2 class="mission-title">Our Goals</h2>
                <div class="mission-text">
                    <ul class="list-unstyled">
                        <li class="mb-3">
                            <i class="bi bi-check-circle-fill me-3" style="color: #DA5B34;"></i>
                            <strong>Reduce Stigma:</strong> Challenge misconceptions and promote understanding about mental health conditions.
                        </li>
                        <li class="mb-3">
                            <i class="bi bi-check-circle-fill me-3" style="color: #DA5B34;"></i>
                            <strong>Increase Access:</strong> Ensure mental health resources are available to all, regardless of economic status.
                        </li>
                        <li class="mb-3">
                            <i class="bi bi-check-circle-fill me-3" style="color: #DA5B34;"></i>
                            <strong>Empower Youth:</strong> Provide young people with tools and support to navigate mental health challenges.
                        </li>
                        <li class="mb-3">
                            <i class="bi bi-check-circle-fill me-3" style="color: #DA5B34;"></i>
                            <strong>Build Community:</strong> Foster supportive networks that promote healing and resilience.
                        </li>
                        <li class="mb-3">
                            <i class="bi bi-check-circle-fill me-3" style="color: #DA5B34;"></i>
                            <strong>Drive Change:</strong> Influence policy and practice to improve mental health systems.
                        </li>
                    </ul>
                </div>
            </div>
            <div class="col-lg-6">
                <div class="d-flex justify-content-center">
                    <div class="hero-image-placeholder">
                        <div class="text-center">
                            <i class="bi bi-target" style="font-size: 4rem; margin-bottom: 10px; color: #DA5B34;"></i>
                            <br>
                            <small>Our Vision</small>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Vision Statement -->
<section class="py-5 bg-light">
    <div class="container">
        <div class="row">
            <div class="col-lg-8 mx-auto text-center">
                <h2 class="mission-title">Our Vision</h2>
                <div class="mission-text">
                    <p class="lead">We envision a future where mental health is treated with the same priority as physical health, where seeking help is seen as a sign of strength, and where every person has access to the support they need to live a fulfilling life.</p>
                    
                    <p>Through our work, we aim to create communities where mental wellness is promoted, protected, and celebrated as an essential component of overall well-being.</p>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Call to Action -->
<section class="py-5">
    <div class="container">
        <div class="row">
            <div class="col-lg-8 mx-auto text-center">
                <h2 class="mission-title">Be Part of the Solution</h2>
                <p class="lead mb-4">Help us create lasting change in mental health support and advocacy.</p>
                <div class="hero-buttons">
                    <a asp-controller="Volunteers" asp-action="VolunteerForEvent" class="btn btn-light" style="background: #DA5B34; color: white; border: none;">Volunteer</a>
                    <a asp-controller="Home" asp-action="About" class="btn btn-outline-primary" style="border-color: #DA5B34; color: #DA5B34;">Learn More</a>
                </div>
            </div>
        </div>
    </div>
</section>
