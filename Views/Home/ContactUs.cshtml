@{
    ViewData["Title"] = "Contact Us Page";
}

<!-- Hero Section -->
<section class="hero-section" style="background-color: #DA5B34; color: white; padding: 60px 0;">
    <div class="container">
        <div class="row align-items-center">
            <!-- Text Content -->
            <div class="col-lg-6">
                <div class="hero-content">
                    <h1 class="hero-title fw-bold mb-4">
                        We’re Here When You Need Us
                    </h1>
                    <p class="hero-quote lead mb-4">
                        Whether you're seeking support, want to collaborate, or just need someone to talk to — our team is ready to listen. Reach out today and let’s build hope together.
                    </p>
                    <div class="hero-buttons">
                        <a href="#contact-form" class="btn btn-light me-3">Send a Message</a>
                        <a href="tel:+27881236667" class="btn btn-outline-light">Call or Text Us</a>
                    </div>
                </div>
            </div>

            <!-- Image -->
            <div class="col-lg-6">
                <div class="d-flex justify-content-center">
                    <div class="hero-image-placeholder">
                        <div class="text-center">
                            <img src="~/images/Nana Foundation Org 021.png" alt="Nana Foundation Profile" style="max-height: 500px; margin-top: 10px;" />
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Contact Page -->
<section class="py-5 bg-light">
    <div class="container">
        <!-- Header -->
        <div class="text-center mb-5">
            <h2 class="mission-title">Get in Touch</h2>
            <p class="lead text-muted">We’re here to listen, support, and collaborate</p>
        </div>
        <!-- Success Message -->
        @if (TempData["MessageSent"] != null)
        {
            <div id="success-alert" class="alert alert-success text-center" role="alert">
                Thank you for reaching out! We’ve received your message.
            </div>

            <script>
                setTimeout(function () {
                    const alert = document.getElementById('success-alert');
                    if (alert) {
                        alert.classList.add('fade');
                        setTimeout(() => alert.remove(), 500); // Remove after fade
                    }
                }, 4000); // 4 seconds before fade starts
            </script>
        }

        <div class="row">
            <!-- Contact Form -->
            <div class="col-lg-6 mb-4">
                <form asp-action="ContactUs" method="post">
                    <div class="mb-3">
                        <label for="name" class="form-label">Full Name</label>
                        <input type="text" class="form-control" id="name" placeholder="Your name" required>
                    </div>
                    <div class="mb-3">
                        <label for="email" class="form-label">Email Address</label>
                        <input type="email" class="form-control" id="email" placeholder="you@example.com" required>
                    </div>
                    <div class="mb-3">
                        <label for="message" class="form-label">Your Message</label>
                        <textarea class="form-control" id="message" rows="5" placeholder="How can we help?" required></textarea>
                    </div>
                    <button type="submit" class="btn btn-primary" style="background-color: #DA5B34; border: none;">Send Message</button>
                </form>
            </div>

            <!-- Contact Info -->
            <div class="col-lg-6 mb-4">
                <div class="bg-white p-4 rounded shadow-sm h-100">
                    <h5 class="fw-bold mb-3">Reach Us Directly</h5>
                    <p><i class="bi bi-envelope me-2 text-danger"></i> info@nanafoundation.org.za</p>
                    <p><i class="bi bi-telephone me-2 text-danger"></i> +27 82 123 4567</p>
                    <p><i class="bi bi-geo-alt me-2 text-danger"></i> Nelson Mandela Bay, Eastern Cape, South Africa</p>

                    <hr>
                    <h6 class="text-muted">Follow Us</h6>
                    <a href="#" class="me-3 text-decoration-none"><i class="bi bi-facebook" style="font-size: 1.5rem; color: #DA5B34;"></i></a>
                    <a href="#" class="me-3 text-decoration-none"><i class="bi bi-instagram" style="font-size: 1.5rem; color: #DA5B34;"></i></a>
                    <a href="#" class="text-decoration-none"><i class="bi bi-twitter" style="font-size: 1.5rem; color: #DA5B34;"></i></a>
                </div>
            </div>
        </div>
    </div>
</section>