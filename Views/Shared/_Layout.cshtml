<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Nanas_Foundation</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Nanas_Foundation.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" />

</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-light bg-white py-3">
            <div class="container">
                <a class="navbar-brand d-flex align-items-center gap-2" asp-area="" asp-controller="Home" asp-action="Index">
                    <i class="bi bi-heart-fill text-danger fs-4"></i>
                    <span class="fw-bold" style="color: #DA5B34;">NANA'S</span>
                    <small class="text-muted">FOUNDATION</small>
                </a>

                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
                        aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>


                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav ms-auto">
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="About">About</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Mission">Our Mission</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Resources">Resources</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="NewsEvents">News & Events</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Contactus">Contact Us</a>
                        </li>
                        <li class="nav-item dropdown d-flex align-items-center">
                            <a class="nav-link p-0 me-1" href="/Home/GetInvolved">Get Involved</a>
                            <a class="nav-link dropdown-toggle p-0" href="#" id="getInvolvedDropdown"
                               role="button" data-bs-toggle="dropdown" aria-expanded="false"></a>
                            <ul class="dropdown-menu" aria-labelledby="getInvolvedDropdown">
                                <li><a class="dropdown-item" asp-controller="Volunteers" asp-action="VolunteerForEvent">Volunteer</a></li>
                                <li><a class="dropdown-item" asp-controller="Donations" asp-action="Create">Make Donation</a></li>
                            </ul>
                        </li>
                    </ul>
                    <ul class="navbar-nav ms-auto">
                        <li class="nav-item">
                            <partial name="_LoginPartial" />
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <main role="main">
        @RenderBody()
    </main>

    <footer class="custom-footer">
        <div class="container">
            <div class="row">
                <div class="col-lg-4 col-md-6 mb-4">
                    <div class="footer-brand">Nanas Foundation</div>
                    <p class="footer-tagline">Empowering youth, reducing stigma, building stronger communities together.</p>
                    <div class="social-links">
                        <a href="#" title="Facebook"><i class="bi bi-facebook"></i></a>
                        <a href="#" title="Twitter"><i class="bi bi-twitter"></i></a>
                        <a href="#" title="Instagram"><i class="bi bi-instagram"></i></a>
                        <a href="#" title="LinkedIn"><i class="bi bi-linkedin"></i></a>
                    </div>
                </div>
                <div class="col-lg-2 col-md-6 mb-4">
                    <div class="footer-section">
                        <h5>About Us</h5>
                        <ul>
                            <li><a asp-area="" asp-controller="Home" asp-action="Mission"><i class="bi bi-arrow-right"></i>Our Mission</a></li>
                            <li><a asp-area="" asp-controller="Home" asp-action="About"><i class="bi bi-arrow-right"></i>Our Story</a></li>
                            <li><a asp-area="" asp-controller="Home" asp-action="ContactUs"><i class="bi bi-arrow-right"></i>Contact Us</a></li>
                        </ul>
                    </div>
                </div>
                <div class="col-lg-2 col-md-6 mb-4">
                    <div class="footer-section">
                        <h5>Resources</h5>
                        <ul>
                            <li><a asp-area="" asp-controller="Home" asp-action="Privacy"><i class="bi bi-arrow-right"></i>Privacy Policy</a></li>
                            <li><a asp-area="" asp-controller="Home" asp-action="NewsEvents"><i class="bi bi-arrow-right"></i>Blog</a></li>
                        </ul>
                    </div>
                </div>
                <div class="col-lg-4 col-md-6 mb-4">
                    <div class="footer-section">
                        <h5>Stay Connected</h5>
                        <p style="color: #bdc3c7; margin-bottom: 20px;">Get updates on our latest initiatives and events.</p>
                        <div class="newsletter-section">
                            <h6><i class="bi bi-envelope-heart me-2"></i>Newsletter</h6>
                            <div class="newsletter-form">
                                <input type="email" placeholder="Enter your email" class="form-control">
                                <button type="submit" class="btn">
                                    <i class="bi bi-send"></i>
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="footer-bottom">
                <p>&copy; 2025 Nanas Foundation. All rights reserved. | Made with <i class="bi bi-heart-fill" style="color: #DA5B34;"></i> for our community</p>
            </div>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
