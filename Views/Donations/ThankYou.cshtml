@{
    ViewData["Title"] = "Thank You";
}
<div class="auth-container text-center">
    <div class="auth-card py-5">
        <i class="bi bi-check-square-fill text-orange fs-1 mb-3"></i>
        <h1 class="text-black">Thank You!</h1>
        <p class="text-muted mb-4">Your donation has been successfully submitted. We appreciate your support.</p>
        <a asp-controller="Home" asp-action="Index" class="auth-submit-btn"
           style="background-color: #DA5B34; color: white; text-decoration: none; border: none; padding: 0.75rem 1.5rem; border-radius: 6px;">
            Back to Home
        </a>
    </div>
</div>
