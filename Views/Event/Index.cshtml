@model IEnumerable<Nanas_Foundation.Models.Event>

@{
    ViewData["Title"] = "Events";
}

<h2>Upcoming Events</h2>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Title</th>
            <th>Date</th>
            <th>Location</th>
            <th>Description</th>
            <th>Options</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var evt in Model)
        {
            <tr>
                <td>@evt.Title</td>
                <td>@evt.Date.ToString("f")</td>
                <td>@evt.Location</td>
                <td>@evt.Description</td>
                <td>
                    <div class="d-flex gap-2">
                        <a asp-action="Edit" asp-route-id="@evt.Id" class="btn btn-warning btn-sm">Edit</a>
                        <form asp-action="Delete" asp-route-id="@evt.Id" method="post" onsubmit="return confirm('Are you sure?');">
                            <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                        </form>
                        <form asp-controller="Volunteers" asp-action="VolunteerForEvent" method="post">
                            <input type="hidden" name="eventId" value="@evt.Id" />
                            <button type="submit" class="btn btn-success btn-sm">Volunteer</button>
                        </form>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>

<a asp-action="Create" class="btn btn-primary">Create New Event</a>

