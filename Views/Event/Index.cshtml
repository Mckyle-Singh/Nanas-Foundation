@model IEnumerable<Nanas_Foundation.Models.Event>

@{
    ViewData["Title"] = "Events";
}

<h2>Upcoming Events</h2>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Title</th>
            <th>Date</th>
            <th>Location</th>
            <th>Description</th>
            <th>Options</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var evt in Model)
        {
            <tr>
                <td>@evt.Title</td>
                <td>@evt.Date.ToString("f")</td>
                <td>@evt.Location</td>
                <td>@evt.Description</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@evt.Id">Edit</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<a asp-action="Create" class="btn btn-primary">Create New Event</a>

