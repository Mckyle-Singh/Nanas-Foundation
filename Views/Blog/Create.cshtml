@model Nanas_Foundation.Models.BlogPost
@{
    ViewData["Title"] = "Blog Submission";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<!-- Header Section -->
<div class="admin-header">
    <div class="d-flex justify-content-between align-items-start">
        <div>
            <h1>CREATE BLOG POST</h1>
            <h2 class="subtitle">New Blog Submission</h2>
            <p class="description">Submit your blog post directly to Nana's Foundation</p>
        </div>
        <a asp-action="Index" class="btn btn-admin-secondary">
            <i class="bi bi-arrow-left me-2"></i>Back to Blog Posts
        </a>
    </div>
</div>

<!-- Main Content -->
<div class="container-fluid px-4" style="max-width: none;">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="admin-form">
                <form asp-action="Create" method="post" enctype="multipart/form-data">
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="AuthorName" class="form-label">Author Name *</label>
                            <input asp-for="AuthorName" class="form-control" placeholder="e.g. Thandi Moyo" />
                            <span asp-validation-for="AuthorName" class="text-danger"></span>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label asp-for="AuthorEmail" class="form-label">Author Email *</label>
                            <input asp-for="AuthorEmail" class="form-control" placeholder="e.g. thandi@example.com" />
                            <span asp-validation-for="AuthorEmail" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-12 mb-3">
                            <label asp-for="Title" class="form-label">Article Title *</label>
                            <input asp-for="Title" class="form-control" placeholder="e.g. Healing Through Storytelling" />
                            <span asp-validation-for="Title" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-12 mb-3">
                            <label asp-for="WebsiteLink" class="form-label">Website Link</label>
                            <input asp-for="WebsiteLink" class="form-control" placeholder="e.g. https://yourblog.com" />
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label class="form-label">Upload PDF *</label>
                            <input type="file" name="PdfFile" class="form-control" accept=".pdf" required />
                            <small class="form-text text-muted">Upload your blog post as a PDF file</small>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label class="form-label">Upload Profile Photo</label>
                            <input type="file" name="ProfilePhoto" class="form-control" accept="image/*" />
                            <small class="form-text text-muted">Optional: Add your profile photo</small>
                        </div>
                    </div>

                    <div class="d-flex gap-3 mt-4">
                        <button type="submit" class="btn btn-admin-primary">
                            <i class="bi bi-check-circle me-2"></i>Submit Blog Post
                        </button>
                        <a asp-action="Index" class="btn btn-admin-secondary">
                            <i class="bi bi-x-circle me-2"></i>Cancel
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
