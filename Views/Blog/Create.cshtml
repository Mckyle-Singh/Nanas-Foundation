@model Nanas_Foundation.Models.BlogPost
@{
    ViewData["Title"] = "Blog Submission";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="container py-5">
    <h2 class="text-center fw-bold mb-2" style="color:#0B2C48;">Blog Submission</h2>
    <p class="text-center text-muted mb-5">
        Submit your blog post directly to Nana's Foundation
    </p>

    <form asp-action="Create" method="post" enctype="multipart/form-data" class="mx-auto" style="max-width: 700px;">
        <div class="mb-3">
            <label asp-for="AuthorName" class="form-label fw-semibold">Author Name*</label>
            <input asp-for="AuthorName" class="form-control shadow-sm" placeholder="e.g. Thandi Moyo" />
            <span asp-validation-for="AuthorName" class="text-danger small"></span>
        </div>

        <div class="mb-3">
            <label asp-for="AuthorEmail" class="form-label fw-semibold">Author Email*</label>
            <input asp-for="AuthorEmail" class="form-control shadow-sm" placeholder="e.g. thandi@example.com" />
            <span asp-validation-for="AuthorEmail" class="text-danger small"></span>
        </div>

        <div class="mb-3">
            <label asp-for="WebsiteLink" class="form-label fw-semibold">Website Link</label>
            <input asp-for="WebsiteLink" class="form-control shadow-sm" placeholder="e.g. https://yourblog.com" />
        </div>

        <div class="mb-3">
            <label class="form-label fw-semibold">Upload PDF*</label>
            <input type="file" name="PdfFile" class="form-control shadow-sm" accept=".pdf" required />
        </div>

        <div class="mb-3">
            <label class="form-label fw-semibold">Upload Profile Photo</label>
            <input type="file" name="ProfilePhoto" class="form-control shadow-sm" accept="image/*" />
        </div>

        <div class="mb-3">
            <label asp-for="Title" class="form-label fw-semibold">Article Title*</label>
            <input asp-for="Title" class="form-control shadow-sm" placeholder="e.g. Healing Through Storytelling" />
            <span asp-validation-for="Title" class="text-danger small"></span>
        </div>

        <div class="text-center mt-4">
            <button type="submit" class="btn px-5 py-2 fw-semibold rounded-pill"
                    style="background-color:#0B2C48; color:white; border:none;">
                Submit
            </button>
        </div>
    </form>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
