@*
    Admin Layout for Nanas Foundation
    This layout defines the global structure for all admin pages.
*@
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Nanas Admin</title>

    <!-- Styles -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
    <link rel="stylesheet" href="~/css/admin-theme.css" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
</head>
<body>
    <div class="d-flex">
        <!-- Sidebar -->
        @await Html.PartialAsync("~/Areas/Admin/Views/Shared/_AdminSidebar.cshtml")

        <!-- Main Content -->
        <main class="flex-grow-1 p-4">
            @RenderBody()
        </main>
    </div>

    <!-- Scripts -->
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>



