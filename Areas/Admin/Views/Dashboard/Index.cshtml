@model List<Nanas_Foundation.Areas.Admin.ViewModels.MonthlyDonationViewModel>

@{
    ViewData["Title"] = "Impact Dashboard";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="container-fluid">
    <h1 class="text-danger fw-bold mb-2">IMPACT DASHBOARD</h1>
    <h2 class="fw-semibold text-dark mb-1">Tracking Our Progress</h2>
    <p class="text-muted mb-4">An overview of our initiatives and their outcomes.</p>

    <!-- Search Bar -->
    <div class="input-group mb-4" style="max-width: 400px;">
        <input type="text" class="form-control" placeholder="Search resources..." />
        <button class="btn btn-outline-secondary" type="button">
            <i class="bi bi-search"></i>
        </button>
    </div>

    <!-- Metrics Summary -->
    <div class="row text-center mb-4">
        <div class="col-md-3">
            <div class="bg-light p-3 rounded shadow-sm">
                <i class="bi bi-cash-coin fs-2 text-danger mb-2"></i>
                <h4 class="fw-bold">R@(String.Format("{0:N0}", ViewBag.TotalDonations))</h4>
                <p class="text-muted">Total Donations Yearly</p>
            </div>
        </div>
        <div class="col-md-3">
            <div class="bg-light p-3 rounded shadow-sm">
                <i class="bi bi-people-fill fs-2 text-danger mb-2"></i>
                <h4 class="fw-bold">1,250</h4>
                <p class="text-muted">Individuals Reached</p>
            </div>
        </div>
        <div class="col-md-3">
            <div class="bg-light p-3 rounded shadow-sm">
                <i class="bi bi-easel-fill fs-2 text-danger mb-2"></i>
                <h4 class="fw-bold">18</h4>
                <p class="text-muted">Workshops Facilitated</p>
            </div>
        </div>
        <div class="col-md-3">
            <div class="bg-light p-3 rounded shadow-sm">
                <i class="bi bi-person-heart fs-2 text-danger mb-2"></i>
                <h4 class="fw-bold">65</h4>
                <p class="text-muted">Volunteers Engaged</p>
            </div>
        </div>
    </div>

    <!-- Monthly Donations Chart -->
    <div class="row mb-4">
        <div class="col-md-12">
            <div class="bg-white p-4 rounded shadow-sm">
                <h5 class="fw-bold mb-3">Monthly Donations</h5>
                <canvas id="donationChart" height="120"></canvas>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script>
        const ctx = document.getElementById('donationChart').getContext('2d');
        const chart = new Chart(ctx, {
            type: 'bar',
            data: {
                labels: @Html.Raw(Json.Serialize(Model.Select(m => m.MonthName))),
                datasets: [{
                    label: 'Donations (ZAR)',
                    data: @Html.Raw(Json.Serialize(Model.Select(m => m.TotalAmount))),
                    backgroundColor: 'rgba(220, 53, 69, 0.7)',
                    borderColor: 'rgba(220, 53, 69, 1)',
                    borderWidth: 1
                }]
            },
            options: {
                scales: {
                    y: {
                        beginAtZero: true,
                        ticks: {
                            callback: function(value) {
                                return 'R' + value;
                            }
                        }
                    }
                }
            }
        });
    </script>
}