@model List<Nanas_Foundation.Areas.Admin.ViewModels.MonthlyDonationViewModel>

@{
    ViewData["Title"] = "Impact Dashboard";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<!-- Header Section -->
<div class="admin-header">
    <div class="d-flex justify-content-between align-items-start">
        <div>
            <h1>IMPACT DASHBOARD</h1>
            <h2 class="subtitle">Tracking Our Progress</h2>
            <p class="description">An overview of our initiatives and their outcomes</p>
        </div>
    </div>
</div>

<!-- Main Content -->
<div class="container-fluid px-4" style="max-width: none;">
    <!-- Search Bar -->
    <div class="mb-4">
        <div class="admin-search-bar input-group">
            <input type="text" class="form-control" placeholder="Search resources..." />
            <button class="btn" type="button">
                <i class="bi bi-search"></i>
            </button>
        </div>
    </div>

    <!-- Metrics Summary -->
    <div class="row mb-5">
        <div class="col-lg-3 col-md-6 mb-4">
            <div class="dashboard-card text-center">
                <i class="bi bi-megaphone card-icon"></i>
                <div class="card-number">52</div>
                <div class="card-label">Speeches Conducted</div>
            </div>
        </div>
        <div class="col-lg-3 col-md-6 mb-4">
            <div class="dashboard-card text-center">
                <i class="bi bi-people card-icon"></i>
                <div class="card-number">1,250</div>
                <div class="card-label">Individuals Reached</div>
            </div>
        </div>
        <div class="col-lg-3 col-md-6 mb-4">
            <div class="dashboard-card text-center">
                <i class="bi bi-lightbulb card-icon"></i>
                <div class="card-number">18</div>
                <div class="card-label">Workshops Facilitated</div>
            </div>
        </div>
        <div class="col-lg-3 col-md-6 mb-4">
            <div class="dashboard-card text-center">
                <i class="bi bi-hand-thumbs-up card-icon"></i>
                <div class="card-number">65</div>
                <div class="card-label">Volunteers engaged</div>
            </div>
        </div>
    </div>

    <!-- Charts Section -->
    <div class="row">
        <!-- Monthly Reach Chart -->
        <div class="col-lg-7 mb-4">
            <div class="chart-container">
                <h5>Monthly Reach</h5>
                <div class="monthly-reach-chart">
                    <canvas id="monthlyReachChart"></canvas>
                </div>
            </div>
        </div>
        
        <!-- Sessions by Type -->
        <div class="col-lg-5 mb-4">
            <div class="chart-container">
                <h5>Sessions by Type</h5>
                <div class="sessions-chart-wrapper">
                    <div class="pie-chart-container">
                        <canvas id="sessionsChart"></canvas>
                        <div class="chart-center-button">
                            <button class="btn btn-admin-secondary btn-sm">View Resource</button>
                        </div>
                    </div>
                    <div class="pie-chart-legend">
                        <div class="legend-item">
                            <div class="legend-color" style="background-color: #FF6B35;"></div>
                            <span class="legend-label">Outreach</span>
                        </div>
                        <div class="legend-item">
                            <div class="legend-color" style="background-color: #F7931E;"></div>
                            <span class="legend-label">Education</span>
                        </div>
                        <div class="legend-item">
                            <div class="legend-color" style="background-color: #FFD23F;"></div>
                            <span class="legend-label">Advocacy</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Additional Info Section -->
    <div class="row">
        <div class="col-12">
            <div class="chart-container">
                <h6 class="text-muted mb-3">Understand common rephonstaticisl and facts about the</h6>
                <a href="#" class="text-danger fw-semibold">Read Article</a>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script>
        // Monthly Reach Line Chart
        const monthlyReachCtx = document.getElementById('monthlyReachChart').getContext('2d');
        const monthlyReachChart = new Chart(monthlyReachCtx, {
            type: 'line',
            data: {
                labels: ['Jan', 'Feb', 'Mar', 'Apr', 'May', 'Jun', 'Jul', 'Aug', 'Sep', 'Oct', 'Nov', 'Dec'],
                datasets: [{
                    label: 'Monthly Reach',
                    data: [300, 450, 600, 750, 800, 900, 950, 1000, 1100, 1200, 1250, 1200],
                    borderColor: '#DA5B34',
                    backgroundColor: 'rgba(218, 91, 52, 0.1)',
                    borderWidth: 3,
                    fill: true,
                    tension: 0.4
                }]
            },
            options: {
                responsive: true,
                maintainAspectRatio: false,
                aspectRatio: 3,
                plugins: {
                    legend: {
                        display: false
                    }
                },
                scales: {
                    y: {
                        beginAtZero: true,
                        max: 1400,
                        grid: {
                            color: '#f1f3f4'
                        },
                        ticks: {
                            stepSize: 200
                        }
                    },
                    x: {
                        grid: {
                            display: false
                        }
                    }
                }
            }
        });

        // Sessions by Type Pie Chart
        const sessionsCtx = document.getElementById('sessionsChart').getContext('2d');
        const sessionsChart = new Chart(sessionsCtx, {
            type: 'doughnut',
            data: {
                labels: ['Outreach', 'Education', 'Advocacy'],
                datasets: [{
                    data: [50, 30, 15],
                    backgroundColor: ['#FF6B35', '#F7931E', '#FFD23F'],
                    borderWidth: 0,
                    cutout: '65%'
                }]
            },
            options: {
                responsive: false,
                maintainAspectRatio: true,
                plugins: {
                    legend: {
                        display: false
                    }
                }
            }
        });
    </script>
}