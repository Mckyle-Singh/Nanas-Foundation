@page
@{
    ViewData["Title"] = "Access Denied";
}


<div class="container d-flex flex-column justify-content-center align-items-center" style="min-height: 80vh;">
    <div class="text-center">
        <!-- Shield Lock Icon -->
        <div class="bg-danger rounded-circle d-inline-flex justify-content-center align-items-center mb-3" style="width: 80px; height: 80px;">
            <i class="bi bi-shield-lock-fill text-white fs-2"></i>
        </div>

        <!-- Heading -->
        <h1 class="fw-bold text-danger">Access Denied</h1>
        <p class="text-muted mb-4">You do not have permission to view this page or perform this action.</p>

        <!-- Action Buttons -->
        <div class="d-flex justify-content-center gap-3">
            <a href="/" class="btn btn-outline-danger">Return to Home</a>
            <a href="/Identity/Account/Login" class="btn btn-danger">Login as Admin</a>
        </div>
    </div>
</div>
